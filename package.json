{
  "name": "greatfrontend",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bunx nx run-many -t serve -p frontend,backend --parallel=2",
    "start": "bunx nx run-many -t start -p frontend,backend --parallel=2",
    "build": "bunx nx run-many -t build -p frontend,backend --parallel=2",
    "preview": "bunx nx preview frontend",
    "db:generate": "cd apps/backend && bunx drizzle-kit generate",
    "db:push": "cd apps/backend && bunx drizzle-kit push",
    "db:studio": "cd apps/backend && bunx drizzle-kit studio",
    "dev:docker": "docker compose up --build",
    "dev:frontend": "bunx nx serve frontend",
    "dev:backend": "bunx nx serve backend",
    "start:docker": "docker compose up --build -d",
    "build:frontend": "bunx nx build frontend",
    "build:backend": "bunx nx build backend",
    "stop:docker": "docker compose down",
    "start:frontend": "bunx nx start frontend",
    "start:backend": "bunx nx start backend",

    "logs:docker": "docker compose logs -f",
    "lint": "bunx nx run-many -t lint --all",
    "clean": "bun scripts/cleaner.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/bun": "latest",
    "globals": "^16.3.0",
    "nx": "^18.3.3",
    "@nx/workspace": "^18.3.3",
    "@nx/js": "^18.3.3",
    "typescript": "^5.9.2"
  },
  "dependencies": {}
}
